{% extends 'base.html.twig' %}

{% block title %}Lista de candidatos{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <style>


      .material-symbols-outlined {
        font-variation-settings:
        'FILL' 1,
        'wght' 700,
        'GRAD' 0,
        'opsz' 48
      }

    .selection {
      position: absolute; 
      top: 0; 
      background: rgb(37, 161, 142);
      background: rgba(37, 161, 142, 0.5); /* Black see-through */
      color: #f1f1f1; 
      width: 100%;
      height: 100%;
      transition: .5s ease;
      opacity:0;
      color: white;
      font-size: 60px;
      padding: 10px;
      text-align: center;
    }
        .labelexpanded {
          position: relative;
          
        }

        .labelexpanded > input {
          display: none;
        }

        .labelexpanded input:checked + .radio-btns > img {
          opacity: 0.4;
          
        }

        .labelexpanded input:checked + .radio-btns {
          background: rgb(37, 161, 142);
            background: rgba(37, 161, 142, 0.5);
          color: #fff;
          
        }

        .labelexpanded input:checked + .radio-btns > .selection{
          opacity: 1;
        }
    </style>
{% endblock %}
 
{% block body %}

    <div class="container mt-3 border rounded p-4" style="background-color: #EDEFF2">
      <h4 class="d-flex justify-content-center mt-4"> Elecciones {{ tipo_de_eleccion }} {{ anio_eleccion }} </h4>
      <div><h5 class="d-flex justify-content-around mb-5 p-2">Institución Educativa San José</h5></div>
      <div>
          <form action="{{ path('app_registrar_voto') }}" method="post" class="d-flex row g-4 p-3 flex-wrap" style="background-color: #C0C0C0" >
            {% for candidato in candidatos %}
              <div class="col-4">
                <div class="card bg-light">
                  <label class="labelexpanded">
                    <input type="radio" name="vote" value="{{ candidato.id }}">
                      <div class="radio-btns">
                          <img src="{{ asset('imagenes/candidatos/' ~ candidato.imagen ) }}" class="img-thumbnail" alt="{{ candidato.nombre|e }}">
                          <h6 class="card-title">{{ candidato.nombre|e }}</h6>
                          <div class="selection material-symbols-outlined">check_circle</div>
                          <span class="material-symbols-outlined"></span>
                        {#<p class="card-subtitle mb-2 text-muted">Número: {{ candidato.eslogan|e }}</p>#}
                      </div>
                    </div>
                </label>
              </div>
            {% endfor %}
        </div>
            <div class="p-3 d-flex flex-column">
              <input type="submit" value="Votar" id="btnVotar" class="btn btn-success d-flex justify-content-center">
            </div>
            
      </form>
      </div>
    </div>

  <script src="{{ asset('script/botonListaCandidatos2.js') }}"></script>
{% endblock %}