{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Estudiantes registrados {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    {% for message in app.session.flashbag.get('notice') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% if registros['registrados'] > 0 %}
        <div class="alert alert-success">
            <h3> Todos los usuarios fueron registrados </h2>
        </div>
    {% endif %}

    {% if registros['no_registrados'] > 0 %}
        <div class="alert alert-danger">
            <h3> No se registraron {{ registros['no_registrados'] }} usuarios </h2>
        </div>
    {% endif %}
    
</div>
{% endblock %}
